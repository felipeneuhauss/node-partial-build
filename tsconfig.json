{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "outDir": "dist/",
    "strict": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "lib": ["es5", "es6"],
    "paths": {
      "@api/*": ["api/*"],
      "@entities/*": ["entities/*"],
      "@declarations/*": ["declarations/*"],
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
